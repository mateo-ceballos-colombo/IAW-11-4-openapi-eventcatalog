{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrderCancelled",
  "type": "object",
  "required": ["id", "customerName", "items", "total", "createdAt", "cancelledAt", "status"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Identificador único de la orden"
    },
    "customerName": {
      "type": "string",
      "description": "Nombre del cliente"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["sku", "quantity", "price"],
        "properties": {
          "sku": {
            "type": "string",
            "description": "Código del producto"
          },
          "quantity": {
            "type": "number",
            "description": "Cantidad solicitada",
            "minimum": 1
          },
          "price": {
            "type": "number",
            "description": "Precio unitario",
            "minimum": 0
          }
        }
      }
    },
    "total": {
      "type": "number",
      "description": "Total calculado de la orden",
      "minimum": 0
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp de creación original"
    },
    "cancelledAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp de cancelación"
    },
    "status": {
      "type": "string",
      "enum": ["CANCELLED"],
      "description": "Estado de la orden (siempre CANCELLED para este evento)"
    },
    "reason": {
      "type": "string",
      "description": "Motivo de cancelación (opcional)"
    },
    "schemaVersion": {
      "type": "string",
      "description": "Versión del esquema del evento (opcional)",
      "default": "1.0"
    }
  }
}
